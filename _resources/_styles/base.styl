html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}
body {
  height 100%
  overflow-y auto
  overflow-x hidden
  margin 0;
  background: #f7f7f7;
  display: flex;
}
.hidden {
  display none
  opacity 0
}
img {
 max-width: 100%;
}

// -------------

.PhotosListContainer {
  width: 350px;
  height: 100vh;
  overflow: scroll;
  position: fixed;
  background: white;
  z-index: 5;
}
.PhotosListContainer p {
  padding: 24px 16px;
}
.PhotosList {
  list-style: none;
  padding: 0;
  margin: 0;
  width: 100%;
}
.PhotosList li {
  border-bottom: 1px solid rgba(0,0,0,.1);
  padding: 16px;
  width: 100%;
  cursor: pointer;
}
